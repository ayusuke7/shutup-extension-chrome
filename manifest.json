{
  "manifest_version": 2,
  "name": "ShutUp",
  "description": "Extension for hide tags and words",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://twitter.com/home"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "open_in_tab": true,
    "page": "popup/index.html"
  },
  "browser_action": {
    "default_title": "Shut Up",
    "default_popup": "popup/index.html"
  },
  "permissions": ["storage"],
  "icons": {
    "48": "icon.png",
    "128": "icon128.png"
  }
}
